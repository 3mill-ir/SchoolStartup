    <!-- end: 3Mill JAVASCRIPTS -->
    <script type="text/javascript">
        $(document).ready(function () {
            //Dropdownlist Selectedchange event
            $("#State").change(function () {
                $("#City").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetCity", "Utility")', // we are calling json method
                    dataType: 'json',
                    data: { id: $("#State").val() },
                    success: function (states) {
                        // states contains the JSON formatted list
                        // of states passed from the controller
                        $.each(states, function (i, state) {
                            $("#City").append('<option value="' + state.Value + '">' + state.Text + '</option>');
                        }); // here we are adding option for States
                        $("#City").trigger('change');
                    },
                    error: function (ex) {
                        alert('Failed to retrieve states.' + ex);
                    }
                });
                return false;
            });



            $("#City").change(function () {
                $("#District").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetDistrict", "Utility")', // we are calling json method
                    dataType: 'json',
                    data: { id: $("#City").val() },
                    success: function (citys) {
                        // states contains the JSON formatted list
                        // of states passed from the controller
                        $.each(citys, function (i, city) {
                            $("#District").append('<option value="' + city.Value + '">' + city.Text + '</option>');
                        }); // here we are adding option for States
                    },
                    error: function (ex) {
                        alert('Failed to retrieve states.' + ex);
                    }
                });
                return false;
            });


        });
    </script>
