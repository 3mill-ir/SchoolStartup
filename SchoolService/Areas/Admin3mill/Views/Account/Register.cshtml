<body>
    <div id="app">
        <div>
            <div class="wrap-content container" id="container">
                <!-- start: PAGE TITLE -->
                <section id="page-title">
                    <div class="row">
                        <div class="col-sm-8">
                            <h1 class="mainTitle">فرم ایجاد حساب کاربری جدید</h1>
                        </div>
                        <ol class="breadcrumb">
                            <li>
                                <div class="logo margin-top-30">
