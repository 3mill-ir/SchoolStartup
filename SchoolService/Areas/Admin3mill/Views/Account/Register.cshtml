                        </ol>
                    </div>
                </section>
                <!-- end: PAGE TITLE -->
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(null, new {style="background-color:red;" })
                <!-- start: FIELDSET -->
                    <div class="container-fluid container-fullw bg-white">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-12">
                                        <fieldset>
                                            <legend>
                                                اطلاعات حساب کاربری
                                            </legend>
                                            <div class="form-group">
                                                <div class="col-lg-12 col-sm-12">
                                                    <div class="panel panel-transparent">
                                                        <div class="panel-body">
                                                            <div class="row">
                                                                <div class="col-md-4 ">
                                                                    <div class=" form-group">
                                                                        <label>
                                                                            حساب کاربری <span class="symbol required"></span>
                                                                        </label>
                                                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "نام حساب کاربری مورد نظر را وارد کنید ..." })
                                                                        @Html.ValidationMessageFor(model => model.UserName)
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-3 col-md-offset-1">
                                                                    <div class=" form-group">
                                                                        <label>
                                                                            رمز عبور <span class="symbol required"></span>
                                                                        </label>
                                                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "رمز عبور مورد نظر را وارد کنید", type = "password" })
                                                                        @Html.ValidationMessageFor(model => model.Password)
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-3 col-md-offset-1">
                                                                    <div class=" form-group">
                                                                        <label>
                                                                            تکرار رمز عبور <span class="symbol required"></span>
                                                                        </label>
                                                                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "تکرار رمز عبور را وارد کنید", type = "password" })
                                                                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-green ladda-button btn-wide" data-style="zoom-in" style="width:100%">
                                                <span class="ladda-label"><i class="fa fa-plus-circle"></i>&nbsp;ثبت حساب کاربری </span>
                                            </button>
                                        </fieldset>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <!-- end: FIELDSET -->
