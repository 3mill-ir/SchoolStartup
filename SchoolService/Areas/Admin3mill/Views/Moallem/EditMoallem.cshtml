@section js_Handler
{
    <script src="~/Content/AdminContent/assets/js/form-elements.js"></script>
    <script src="~/Content/AdminContent/assets/js/ui-buttons.js"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAigjOSg1VbxQCNeFkQdDxf5t0-2ubADd4&libraries=geometry&callback=myMap"></script>
    <script src="~/Scripts/PipoGMaps.js"></script>
    <script src="~/Content/AdminContent/assets/js/ui-notifications.js"></script>
    <script>
        jQuery(document).ready(function () {
            Main.init();
            FormElements.init();
            UIButtons.init();
            UINotifications.init("@ViewBag.jsNotifyMessage");
        });
        var c = '@Model.moallem.Jensiat';
        if (c == 'False') {
            document.getElementById("pipocombo").value = "false";
            $('.cs-placeholder').text("زن");
        }
    </script>
}
<div class="main-content">
    <div class="wrap-content container" id="container">
        <!-- start: PAGE TITLE -->
        @Html.Partial("PageTittle")
        <!-- end: PAGE TITLE -->
        <!-- start: BASIC EXAMPLE -->
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.moallem.ID)
                @Html.HiddenFor(model => model.moallem.F_ParrentID)
                        @Html.HiddenFor(model => model.moallem.F_UserInformation) 
               @Html.HiddenFor(model => model.moallem.UserInformation.ID)
            @Html.AntiForgeryToken()
            <div class="container-fluid container-fullw bg-white">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row margin-top-30">
                            <div class="col-lg-6 col-md-12">
                                <fieldset>
                                    <legend>
                                        مشخصات معلم<span class="symbol required"></span>
                                    </legend>
                     
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            @Html.DisplayName("نام")
                                        </label>

                                        @Html.TextBoxFor(model => model.moallem.UserInformation.FirstName, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "نام را وارد کنید", @type = "text" })
                                        @Html.ValidationMessageFor(model => model.moallem.UserInformation.FirstName)
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            @Html.DisplayName("نام خانوادگی")
                                        </label>
                                        @Html.TextBoxFor(model => model.moallem.UserInformation.LastName, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "نام خانوادگی را وارد کنید", @type = "text" })
                                        @Html.ValidationMessageFor(model => model.moallem.UserInformation.LastName)
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            @Html.DisplayName("نام پدر")
                                        </label>
                                        @Html.TextBoxFor(model => model.moallem.NamePedar, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "نام پدر را وارد کنید", @type = "text" })
                                        @Html.ValidationMessageFor(model => model.moallem.NamePedar)
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            @Html.DisplayName("کد ملی")
                                        </label>
                                        @Html.TextBoxFor(model => model.moallem.UserInformation.CodeMelli, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "کد ملی را وارد کنید", @type = "number" })
                                        @Html.ValidationMessageFor(model => model.moallem.UserInformation.CodeMelli)
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            @Html.DisplayName("جنسیت")
                                        </label>
                                        @Html.DropDownListFor(model => model.moallem.Jensiat, ViewData["Jensiat"] as List<SelectListItem>, new { @class = "cs-select cs-skin-elastic" })
                                        @Html.ValidationMessageFor(model => model.moallem.Jensiat)
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            @Html.DisplayName("شماره تماس")
                                        </label>
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.moallem.Mobile, new { @class = "form-control input-mask-phone mypipostyle", Id = "form-fieldt-mask-2", placeholder = " (9**) ***-**** شماره همراه", style = "direction:ltr;text-align:right;" })
                                            <span class="input-group-addon"> <i class="fa fa-phone"></i> </span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.moallem.Mobile)
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            @Html.DisplayName("آدرس")
                                        </label>
                                        @Html.TextBoxFor(model => model.moallem.Address, new { @class = "form-control", @id = "form-field-22", @placeholder = "آدرس را وارد کنید", @type = "text" })
                                        @Html.ValidationMessageFor(model => model.moallem.Address)
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            @Html.DisplayName("شماره شناسنامه")
                                        </label>
                                        @Html.TextBoxFor(model => model.moallem.ShomareShenasname, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "شماره شناسنامه را وارد کنید", @type = "number" })
                                        @Html.ValidationMessageFor(model => model.moallem.ShomareShenasname)
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            @Html.DisplayName("تاریخ تولد")
                                        </label>
                                        <div class="input-group">
                                            <div class="input-group-addon" data-disablebeforetoday="false" data-mddatetimepicker="true" data-targetselector="#exampleInput2" data-trigger="click" data-enabletimepicker="true" data-mdpersiandatetimepicker="" data-mdformat="yyyy/MM/dd HH:mm:ss" data-mdpersiandatetimepickerselecteddatetime="{&quot;Year&quot;:1395,&quot;Month&quot;:6,&quot;Day&quot;:13,&quot;Hour&quot;:0,&quot;Minute&quot;:0,&quot;Second&quot;:0}" style="cursor: pointer;" data-original-title="" title="" data-mdpersiandatetimepickershowing="false">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </div>
                                            @Html.TextBoxFor(model => model.moallem.TarikhTavallod, new { @class = "form-control", id = "exampleInput2", placeholder = "تاریخ تولد", style = "direction: ltr;" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.moallem.TarikhTavallod)
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            @Html.DisplayName("محل صدور")
                                        </label>
                                        @Html.TextBoxFor(model => model.moallem.MahaleSodoor, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "محل صدور را وارد کنید", @type = "text" })
                                        @Html.ValidationMessageFor(model => model.moallem.MahaleSodoor)
                                    </div>
                                </fieldset>
              
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <fieldset>
                                    <legend>
                                        اطلاعات حساب کاربری معلم<span class="symbol required"></span>
                                    </legend>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            @Html.DisplayName("نام کاربری")
                                        </label>

                                        @Html.TextBox("username", null, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "نام را وارد کنید", @type = "text", @Value = ViewBag.MoallemUsername, disabled = true })
                                    </div>
                                    <div class="form-group">
                                        <nav id="cl-effect-13" class="links cl-effect-13">
                                            <a href="@Url.Action("AccountManageMoallem", "Account", new { UsernameCO = ViewBag.MoallemUsername, ModirId = ViewBag.ModirId, NemayandegiId = ViewBag.NemayandegiId, MoallemId = Model.moallem.ID })">
                                                تغییر رمز عبور
                                            </a>
                                        </nav>
                                    </div>
                                </fieldset>
                                <fieldset>
                                    <legend>
                                        دروس تخصصی<span class="symbol required"></span>
                                    </legend>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">
                                            @Html.DisplayName("دروس")
                                        </label>

                                        @Html.ListBoxFor(model => model.DarsId, Model.Darsha, new { @class = "js-example-basic-multiple js-states form-control" })
                                        @Html.ValidationMessageFor(model => model.DarsId)
                                    </div>
                                </fieldset>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-wide btn-dark-green ladda-button " style="width:100%;" data-style="zoom-in" id="PipoSubmit">
                                        <span class="ladda-label">@Resource.Resource.Edit</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
