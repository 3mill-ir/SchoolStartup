@{
    string color = "#9fda9f";
    string icon = "fa fa-check-square";
}
<div class="main-content">
    <div class="wrap-content container" id="container">
        <!-- start: PAGE TITLE -->
        @Html.Partial("PageTittle")
        <!-- end: PAGE TITLE -->
        <!-- start: DYNAMIC TABLE -->
        <div class="container-fluid container-fullw bg-white">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                        <thead>
                            <tr>
                                <th>@Html.DisplayName(Resource.Resource.ID)</th>
                                <th>@Html.DisplayName(Resource.Resource.FirstName)</th>
                                <th>@Html.DisplayName(Resource.Resource.LastName)</th>
                                <th>@Html.DisplayName(Resource.Resource.CodeMelli)</th>
                                <th>@Html.DisplayName(Resource.Resource.Telephone)</th>
                                <th>@Html.DisplayName(Resource.Resource.NaameMadrese)</th>
                                <th class="center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.UserInformation.Status != true)
                                {
                                    color = "#da9f9f";
                                    icon = "fa fa-square";
                                }
                                else
                                {
                                    color = "#9fda9f";
                                    icon = "fa fa-check-square";
                                }
                                <tr style="background-color:@color">
                                    <td>@item.ID</td>
                                    <td>@item.UserInformation.FirstName</td>
                                    <td>@item.UserInformation.LastName</td>
                                    <td>@item.UserInformation.CodeMelli</td>
                                    <td style="direction: ltr;text-align: right;">@item.Mobile</td>
                                    <td>@item.UserInformation.Madaares.NaameMadrese</td>
                                    <td>
                                        <a href="@Url.Action("DetailMadares", "Madares", new { MadaresId = item.UserInformation.F_MadaaresID, NemayandegiId = ViewBag.NemayandegiId })" class="btn btn-transparent btn-xs" data-toggle="tooltip" data-placement="top" title="جزئیات"><i class="fa fa-info-circle"></i></a>
                                        @*<a href="@Url.Action("EditModir", "Modir", new { ModirId = item.ID })" class="btn btn-transparent btn-xs" data-toggle="tooltip" data-placement="top" title="ویرایش"><i class="fa fa-pencil"></i></a>*@
                                        @*<a id="PipoModalLink_@item.ID" class="btn btn-transparent btn-xs tooltips" data-toggle="tooltip" data-placement="top" title="تغییر وضعیت نمایش"><i class="@icon fa-white" data-toggle="modal" data-target="#PipoModal"></i></a>*@
                                    </td>
                                </tr>
                            }
                        </tbody>



                    </table>
                </div>
            </div>
        </div>
        <!-- end: DYNAMIC TABLE -->
