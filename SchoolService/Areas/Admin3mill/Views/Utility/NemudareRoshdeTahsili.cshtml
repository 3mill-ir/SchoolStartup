@model IEnumerable<SchoolService.Models.AndroidJsonModel.Chart_Model>
<script src="~/Scripts/Chart.bundle.min.js"></script>
<script src="~/Scripts/Chart.min.js"></script>
<script src="~/Scripts/PipoChart.js"></script>
<div class="col-lg-10 col-md-12 col-md-push-1">
    <canvas id="myChart" style="max-height:400px !important;"></canvas>
    @if (Model.Count() > 0)
    {
        <script>
            var ScoreResult = [];
            var LableResult = [];
            var BackGroundColors = ['#2DCC5C', '#2DCC5C', '#2DCC5C', '#2DCC5C', '#2DCC5C', '#2DCC5C', '#2DCC5C', '#2DCC5C', '#2DCC5C', '#2DCC5C', '#2DCC5C', '#2DCC5C'];
            var BorderColors = [];
            @foreach (var p in Model)
         {
                     <text>
            ScoreResult.push(@p.Avrage);
            LableResult.push('@p.Month');
            </text>
                }
            Init('myChart', ScoreResult, LableResult, BackGroundColors, BorderColors, "", "bar")
        </script>
    }
    else
    {
        <p style="text-align: center;font-size: 20px;color: #DF2617;">خطا در بارگذاری نمودار پیشرفت تحصیلی !</p>
    }
</div>